{
    "name": "ChangeText",
    "version": "1.0",
    "description": "Extension to change text on websites",
    "permissions": [
        "activeTab",
        "declarativeContent",
        "storage",
        "tabs",
        "*://*/*"
    ],
    "background": {
        "scripts": [
            "background.js",
            "contentscript.js"
        ],
        "persistent": false
    },
     "content_scripts": [{
         "matches": ["<all_urls>"],
         "js": ["jquery.js",
             "contentScript.js"
         ]
     }],
    "browser_action": {
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "manifest_version": 2
}